@{
    ViewData["Title"] = "Ajax";
    Layout = "_Ajax";
}

<div class="table-light mt-5 mb-4">
    <table id="table" class="table table-sm table-hover text-capitalize">
        <thead class="thead-light">
            <tr>
                <th scope="col" style="width: 8%">No</th>
                <th >Name</th>
                <th >Url</th>
                <th  style="width: 8%">Detail</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-capitalize" id="titleModelPokemon"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="text-center" id="img">

                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4">Name</div>
                    <div class="col-1">:</div>
                    <div class="col font-weight-bold text-capitalize" id="namePokemon">1</div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4">Height</div>
                    <div class="col-1">:</div>
                    <div class="col font-weight-bold text-capitalize" id="heightPokemom">d</div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4">Weight</div>
                    <div class="col-1">:</div>
                    <div class="col font-weight-bold text-capitalize" id="weightPokemon"></div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4">Abilities</div>
                    <div class="col-1">:</div>
                    <div class="col font-weight-bold text-capitalize" id="abilitiesPokemon"></div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4">Type</div>
                    <div class="col-">:</div>
                    <div class="col font-weight-bold text-capitalize" id="typePokemon"></div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/ajax.js" type="text/javascript"></script>
}